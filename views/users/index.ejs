<%- include('../partials/header') %>



<div class="padding">
<table>
  <thead>
      <th>Name</th>
      <th>Email</th>
      <th>Birth Date</th>
     

  </thead>
  <tbady>
      <% users.forEach(function(use) { %>
          <tr>
              <td class="spacing"><%= use.name %></td>
              <td class="spacing"><%= use.email %></td>
              <td class="spacing"><%= use.birthday %></td>
              
              <% if(use._id.equals(user._id)) { %>
              <td><a href="/users/<%= user._id %>">DETAILS</a></td>
              <td >
                  <form action="/users/<%= user._id %>?_method=DELETE" method="POST" class="delete" >
                  <button type="submit" onclick="return confirm('Are you sure you want to delete your profile and logout?')">Delete</button>
              </form>
              </td>
              <td>
                <form action="/users/<%= user._id %>/update" method="GET" class="update">
                <button type="submit" >Edit</button>
            </form>
            </td>
            <% } %>
          </tr>

     <% }) %>
  </tbady>
</table>
</div>
    
<%- include('../partials/footer') %>